<Window x:Class="GenericStack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenericStack"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid x:Name="MainGrid" Focusable="True" KeyDown="HandleKey" KeyUp="MainGrid_KeyUp">
        <TextBlock x:Name="MainTextBlock" HorizontalAlignment="Center" Height="187" Text="Hi This is my Stack Program" TextWrapping="Wrap" VerticalAlignment="Top" Width="622" Margin="0,70,0,0"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="157,282,0,0" VerticalAlignment="Top" Height="46" Width="83" Click="ClearButtonEvent"/>
        <Button Content="Open" HorizontalAlignment="Left" Margin="334,282,0,0" VerticalAlignment="Top" Width="83" Height="47" Click="OpenButtonEvent"/>
        <Button Content="Save as" HorizontalAlignment="Left" Margin="524,282,0,0" VerticalAlignment="Top" Width="83" Height="47" Click="SaveAsButtonEvent"/>
        <TextBox x:Name="FileTextBox" HorizontalAlignment="Left" Margin="524,346,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Height="33"/>

    </Grid>
</Window>
